# Nginx configuration for BrandTracker on driftwoodstudios.se
# Place this in /etc/nginx/sites-available/brandtracker
# Then create symlink: ln -s /etc/nginx/sites-available/brandtracker /etc/nginx/sites-enabled/

server {
    listen 80;
    listen [::]:80;
    server_name driftwoodstudios.se;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name driftwoodstudios.se;

    # SSL certificates (use certbot to generate)
    ssl_certificate /etc/letsencrypt/live/driftwoodstudios.se/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/driftwoodstudios.se/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # BrandTracker application
    location /brandtracker {
        proxy_pass http://localhost:3011;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Backend API (optional - if you want direct access)
    location /brandtracker/api {
        proxy_pass http://localhost:8011/api;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Root location (your main website)
    location / {
        # Your main website configuration here
        root /var/www/html;
        index index.html;
    }
}
